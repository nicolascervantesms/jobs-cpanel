    "devDependencies": {
        "gulp-bower": "^0.0.15",
        "node-sass": "^7.0.0",
        "nodemon": "^2.0.15"
    },
    "dependencies": {
        "bootstrap": "^5.1.3",
        "bootstrap-sass": "^3.4.3",
        "stylelint": "^13.7.2",
        "stylelint-config-recommended": "^3.0.0",
